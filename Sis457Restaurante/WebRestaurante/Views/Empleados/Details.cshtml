@model WebRestaurante.Models.Empleado

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-3">
    <div class="container">
        <div class="row">
            <h1>Detalles de Empleados</h1>

            <div>

                <hr />
                <dl class="row">
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-2"> </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PrimerApellido)
                    </dd>
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SegundoApellido)
                    </dd>
                    <dt class="col-sm-2"> </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-2"> </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cargo)
                    </dd>
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UsuarioRegistro)
                    </dd>
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaRegistro)
                    </dd>
                    <dt class="col-sm-2"> </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Estado)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
                <a asp-action="Index">Atras</a>
            </div>
        </div>
    </div>
</div>