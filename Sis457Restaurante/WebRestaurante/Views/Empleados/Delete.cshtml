@model WebRestaurante.Models.Empleado

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-3">
    <div class="container">
        <div class="row">

            <h1>Eliminar Empleado</h1>

            <h3>¿Está seguro que desea eliminar al empleado?</h3>
            <div>

                <hr />
                <dl class="row">
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PrimerApellido)
                    </dd>
                    <dt class="col-sm-2"> </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SegundoApellido)
                    </dd>
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                    <dt class="col-sm-2"> </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cargo)
                    </dd>
                    <dt class="col-sm-2"> </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UsuarioRegistro)
                    </dd>
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaRegistro)
                    </dd>
                    <dt class="col-sm-2"></dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Estado)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Atras</a>
                </form>
            </div>


        </div>

    </div>

</div>